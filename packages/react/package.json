    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/esbuild-plugin": "^2.3.18",
    "@vanilla-extract/recipes": "^0.5.7",
    "@vanilla-extract/sprinkles": "^1.6.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@snurls/themes": "workspace:*",
    "react": "^19.1.0"
  }
}
