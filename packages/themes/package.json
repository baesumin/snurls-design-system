{
  "name": "@snurls/themes",
  "version": "0.0.2",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./themes.css": "./dist/themes.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/baesumin/snurls-design-system.git",
    "directory": "packages/themes"
  },
  "homepage": "https://github.com/baesumin/snurls-design-system/tree/main/packages/themes",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm build:js && pnpm build:type && pnpm build:css",
    "build:js": "node build.js",
    "build:type": "tsc --emitDeclarationOnly",
    "build:css": "node ./scripts/build-css-module.js",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@snurls/esbuild-config": "workspace:*"
  }
}
